{
  "name": "browser-hrtime",
  "version": "1.0.0",
  "description": "use process.hrtime() in the browser",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "browser": "lib/index.umd.js",
  "scripts": {
    "build": "rollup -c && npm run ts",
    "ts": "cp src/main.ts lib/index.cjs.d.ts && cp src/main.ts lib/index.esm.d.ts && cp src/main.ts lib/index.umd.d.ts",
    "dev": "rollup -c -w",
    "lint": "eslint index.js",
    "format": "prettier --write \"index.js\"",
    "release": "dotenv release-it",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vltansky/browser-hrtime.git"
  },
  "keywords": [
    "hrtime",
    "process",
    "perfomance",
    "angular",
    "node"
  ],
  "author": "Vlad Tansky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vltansky/browser-hrtime/issues"
  },
  "homepage": "https://github.com/vltansky/browser-hrtime#readme",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "eslint": "^6.8.0",
    "karma": "^5.0.2",
    "prettier": "^2.0.5",
    "release-it": "^13.5.5",
    "rollup": "^1.29.0"
  },
  "files": [
    "lib"
  ],
  "release-it": {
    "github": {
      "release": true
    }
  }
}
