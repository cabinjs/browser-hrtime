{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./lib",
      "target": "es2015",
      "module": "es6",
      "outDir": "./lib",
      "allowJs": true,
      "noEmit": true,
      "strict": true,
      "moduleResolution": "node",
      "allowUmdGlobalAccess": true,
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"],
  }