{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "strict": true,
        "noEmit": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "lib/",
        "typeRoots": [ "node_modules/@types" ]
    },
    "outDir": "./lib",
    "include": ["src"],
    "exclude": [
      "node_modules",
      "tests",
      "**/*.spec.ts"
    ]
}
